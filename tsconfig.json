{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
            "webpack",
            "webpack-env",
            "jest"
        ],
        "paths": {
            "@framework/*": [
                "packages/framework/src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "packages/**/*.ts",
        "packages/**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}
